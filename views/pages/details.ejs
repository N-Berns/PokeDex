<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/header") %>
  </head>
  <body class="bg-blue-200">
    <div
      class="w-[400px] min-w-[400px] h-[589px] min-h-[500px] bg-red-500 border-2 border-black mx-auto p-5 m-5 flex flex-col rounded-tl-2xl rounded-tr-md rounded-br-md rounded-bl-2xl"
    >
      <div class="grid grid-cols-3 grid-rows-6 gap-4 h-full w-full">
        <!-- Top Section -->
        <div class="col-span-3 row-span-1 grid grid-cols-3 h-full w-full">
          <div class="flex justify-center items-center">
            <div class="w-20 h-20 bg-blue-500 rounded-full border-4 border-white"></div>
          </div>
          <div class="flex justify-center items-center gap-2">
            <div class="w-6 h-6 bg-red-500 rounded-full border border-black"></div>
            <div class="w-6 h-6 bg-yellow-500 rounded-full border border-black"></div>
            <div class="w-6 h-6 bg-green-500 rounded-full border border-black"></div>
          </div>
        </div>

        <!-- Middle Section (Top to Bottom & Centered) -->
        <div
          class="flex flex-col items-center justify-center p-4 bg-white border col-span-3 row-span-4 h-full w-full relative rounded-tl-lg rounded-tr-lg rounded-br-lg"
          style="clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 10% 100%, 0% 90%)"
        >
          <!-- PokÃ©mon Container (Stacked Top-to-Bottom) -->
          <div
            class="flex flex-col items-center justify-center p-4 border h-[90%] w-[90%] gap-4 rounded-tl-lg rounded-tr-lg rounded-bl-lg rounded-br-lg bg-[url('https://i.pinimg.com/736x/6b/ea/12/6bea12ee9c7b069e8bdcf74726fdd299.jpg')] bg-cover bg-center"
          >
            <!-- Name -->
            <h1 class="text-xl text-white drop-shadow-[2px_2px_0_black] font-bold text-center capitalize">
              <%= pokemon.name %>
            </h1>

            <!-- Sprite -->
            <img src="<%= pokemon.sprites.front_default %>" alt="<%= pokemon.name %>" class="w-32 h-32" />

            <!-- Stats -->
            <div class="flex flex-col items-center text-white">
              <p class="text-md drop-shadow-[2px_2px_0_black] font-semibold">Height: <%= pokemon.height %></p>
              <p class="text-md drop-shadow-[2px_2px_0_black] font-semibold">Weight: <%= pokemon.weight %></p>
              <p class="text-md drop-shadow-[2px_2px_0_black] font-semibold">
                Type: <%= pokemon.types.map(t=> t.type.name).join(', ') %>
              </p>
            </div>
          </div>
        </div>

        <!-- Button Section (Aligned Right) -->
        <div class="p-4 col-span-3 row-span-1 flex justify-end items-center">
          <a href="/" class="px-4 py-2 bg-black text-white rounded-lg flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-6 h-6"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <%- include("../partials/footer") %>
  </body>
</html>
